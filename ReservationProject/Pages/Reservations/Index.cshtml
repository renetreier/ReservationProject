@page
@model ReservationProject.Soft.Pages.Reservations.ReservationsModel

@{
    ViewData["Title"] = "Index";
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationsList[0].ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationsList[0].RoomId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationsList[0].WorkerId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReservationsList)
        {
            //TODO tahaks näha ruumi nime ja töötaja nime, mitte ID
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkerId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-handler="Edit" asp-route-id="@item.ReservationId">Edit</a> |
                    <a asp-page="./Details" asp-route-handler="Details" asp-route-id="@item.ReservationId">Details</a> |
                    <a asp-page="./Delete" asp-route-handler="Delete" asp-route-id="@item.ReservationId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
