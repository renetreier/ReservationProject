@{
    Layout = "_Layout";
    ViewData["Title"] = "Delete";
    
}

<h1>@ViewData["Title"]</h1>

@await RenderSectionAsync("ErrorMessage")

<h2>Are you sure you want to delete this @ViewData["Page"]?</h2>
<div>
    <dl class="row">

        @RenderBody()

    </dl>

    <form method="post">
        @await RenderSectionAsync("DeleteBinding")
        <div>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" asp-route-handler="Index">Back to List</a>
        </div>
    </form>
</div>

