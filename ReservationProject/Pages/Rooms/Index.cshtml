@page
@using ReservationProject.Core.Extensions
@model ReservationProject.Pages.RoomsPage

@{
    Layout = "_Index";
}

<table class="table">
    <thead>
        <tr>
            @Html.TableSortHeader(model => model.Item.RoomName, Model)
            @Html.TableSortHeader(model => model.Item.BuildingAddress, Model)
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                @Html.RowData(modelItem => item.RoomName)
                @Html.RowData(modelItem => item.BuildingAddress)
                @Html.RowButtons(Model.PageUrl, $"{item.Id}")
            </tr>
        }
    </tbody>
</table>